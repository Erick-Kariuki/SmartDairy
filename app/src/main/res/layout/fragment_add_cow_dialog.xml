<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryContainer"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Add New Cow"
            app:titleCentered="true"
            app:titleTextColor="?attr/colorOnPrimary" />
    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


    <ImageView
        android:id="@+id/cowImageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/baseline_image_24"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/cowNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cow Name"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/motherNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mother Name"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/dateOfBirthEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth (MM-DD-YYYY)"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:focusable="false"/>



    <EditText
        android:id="@+id/tagNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tag Number"
        android:layout_margin="5dp"
        android:inputType="number" />

        <Spinner
            android:id="@+id/cowBreedSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:layout_margin="5dp"/>


        <Spinner
            android:id="@+id/cowStatusSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>